@model Salon.Web.Models.OrderViewModel

@{
    Layout = null;
}

@{
    ViewData["Title"] = "Delete";
}

<div class="modal-content">
    <div class="modal-header">
        <h4>Deleting order</h4>
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
        <h3>@ViewBag.Message</h3>
    </div>
    <div class="modal-body">
        <dl class="row">
            <dt class="col-sm-4">
                ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-4">
                Service
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Service.NameOfService)
            </dd>
            <dt class="col-sm-4">
                Price
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-4">
                Customer
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.FirstName)
                @Html.DisplayFor(model => model.Customer.LastName)
            </dd>
            <dt class="col-sm-4">
                Date
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Date)
            </dd>
            <dt class="col-sm-4">
                Status
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Status.OrderStatus)
            </dd>
        </dl>
        <form asp-action="Delete">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>




